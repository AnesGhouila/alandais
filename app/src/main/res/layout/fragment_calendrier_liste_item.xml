<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/calendrier_liste_debut"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawableLeft="@drawable/ic_pointage_in"
            android:drawableStart="@drawable/ic_pointage_in"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:gravity="center"
            android:layout_weight="1"
            tools:text="2016-08-12 07h00"
            />

        <TextView
            android:id="@+id/calendrier_liste_fin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawableLeft="@drawable/ic_pointage_out"
            android:drawableStart="@drawable/ic_pointage_out"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:gravity="center"
            android:layout_weight="1"
            tools:text="2016-08-12 12h00"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/calendrier_liste_commentaire"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        tools:text="commentaire"
        />

    <TextView
        android:id="@+id/calendrier_liste_duree"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        tools:text="05h00"
        />

</LinearLayout>