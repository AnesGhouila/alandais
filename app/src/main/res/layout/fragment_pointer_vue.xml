<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/cardview_dark_background"
    tools:context="fr.s3i.pointeuse.presentation.pointer.PointerVue" >

    <TextView
        android:id="@+id/txtPointageRapide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_gravity="start"
        android:layout_weight="0"
        android:textColor="@android:color/tab_indicator_text" />

    <Button
        android:background="@drawable/bouton123"
        android:id="@+id/btnPointer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/pointer"
        android:textSize="16sp"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_gravity="top"
        android:layout_weight="0"
        android:textColor="@color/cardview_light_background" />

    <Button
        android:background="@drawable/bouton123"
        android:id="@+id/btnInserer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/inserer"
        android:textSize="16sp"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_gravity="top"
        android:layout_weight="0"
        android:textColor="@color/cardview_light_background" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center" >

        <TableRow>

            <TextView
                android:text="@string/realise"
                android:textSize="18sp"
                android:padding="5dp"
                android:textColor="@android:color/tab_indicator_text"
                android:layout_gravity="center"
                android:layout_span="2"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/lblPointageEnCoursJour"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_gravity="start"
                android:textColor="@android:color/tab_indicator_text"
                android:text="@string/pointageEnCousDureeJourLibelle" />

            <TextView
                android:id="@+id/txtPointageEnCoursJour"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_gravity="start"
                android:textColor="@android:color/tab_indicator_text" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/lblPointageEnCoursSemaine"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_gravity="start"
                android:textColor="@android:color/tab_indicator_text"
                android:text="@string/pointageEnCousDureeSemaineLibelle" />

            <TextView
                android:id="@+id/txtPointageEnCoursSemaine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_gravity="start"
                android:textColor="@android:color/tab_indicator_text"  />

        </TableRow>

    </TableLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgS3i"
            android:layout_width="wrap_content"
            android:src="@drawable/bandeau_s3i"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:contentDescription="@string/app_name" />

    </FrameLayout>

</LinearLayout>
